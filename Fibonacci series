#include<stdio.h>

int main() {
    int n, i, term1 = 0, term2 = 1, nextTerm, sum = 0;
    
    // Input the number of terms in Fibonacci series
    printf("Enter the number of terms in Fibonacci series: ");
    scanf("%d", &n);
    
    printf("Fibonacci Series:\n");
    for (i = 0; i < n; i++) {
        // Print current term
        printf("%d ", term1);
        // Add current term to sum
        sum += term1;
        // Calculate next term
        nextTerm = term1 + term2;
        // Update terms for the next iteration
        term1 = term2;
        term2 = nextTerm;
    }
    
    // Print sum of the Fibonacci series
    printf("\nSum of the Fibonacci Series: %d\n", sum);
    
    return 0;
}
